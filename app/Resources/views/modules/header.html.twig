{% trans_default_domain 'header_footer' %}
<header>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#"><img class="navbar-img__hidden" alt="Brand" src="{{ asset('img/logo-home.png') }}"></a>
                <button type="button" class="hamburger navbar-toggle collapsed " data-toggle="collapse" data-target="#navbar" aria-expanded="false">
                    <span class="sr-only navbar-iconBar">Toggle navigation</span>
                    <span class="icon-bar navbar-iconBar"></span>
                    <span class="icon-bar navbar-iconBar"></span>
                    <span class="icon-bar navbar-iconBar"></span>
                </button>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="navbar-menu"><a class="navbar-link" href="{{ path('our_restaurants') }}">{{ 'restaurant' |trans |upper}}</a></li>
                    <li class="navbar-menu"><a class="navbar-link" href="">{{ 'reservation' |trans |upper}}</a></li>
                    <li class="navbar-menu"><a class="navbar-link" href="">{{ 'gift_cards' |trans |upper}}</a></li>
                    <li class="navbar-menu" id="brand-logo"><a class="navbar-link" href="{{ path('app_homepage') }}"><img class="navbar-img" src="{{ asset('img/logo-home.png') }}"></a></li>
                    <li class="navbar-menu"><a class="navbar-link" href="">{{ 'blog' |trans |upper}}</a> </li>
                    <li class="navbar-menu"><a class="navbar-link" href="">{{ 'contact_us' |trans |upper}}</a></li>
                    {% if app.user %}  {# when user is connected , his firstname appears instead of connection link  #}
                    <li class="dropdown myAccount">
                        <a class="dropdown-toggle text-uppercase" data-toggle="dropdown" aria-expanded="false" >
                            {{ app.user.getFirstname() }}
                        </a>
                        <ul class="dropdown-menu"> {# user menu - acount infos and profile access#}
                            <li class="dropdown-menu--list">
                                <a href="{{ path('member_profile_edit') }}">{{ 'my_account' |trans |upper}}</a>
                            </li>
                            <li class="dropdown-menu--list">
                                <a href="">{{ 'my_profile' |trans |upper}}</a>
                            </li>
                            <li class="dropdown-menu--list">
                                <a href="">{{ 'disconnect' |trans |upper}}</a>
                            </li>
                        </ul>
                    </li>
                    {% else %}
                    <li class="navbar-menu"><a class="navbar-link" href="{{ path('member_connection') }}">{{ 'connection' |trans |upper}}</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>