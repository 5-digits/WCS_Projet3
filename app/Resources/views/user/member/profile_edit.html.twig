{% extends 'user/layout.html.twig' %}

{% block avatar %}
    <div id="pictureUpload">
        {% if avatar != null %}
            <img src="{{ asset('uploads/users_avatar/' ~ avatar) }}"/>
        {% else %}
            <img src="{{ asset('uploads/users_avatar/default/avatar.jpg') }}"/>
        {% endif %}
        {{ form_start(form) }}
        {{ form_widget(form.media) }}
        <label for="app_user_profile_media"><span class="glyphicon glyphicon-camera"></span></label>
        {{ form_errors(form) }}
        {# TODO add the field to get errors#}
    </div>
{% endblock %}

{% block content %}
    <section id="profileEdit" class="container-fluid">
        <h2>MON PROFIL</h2>{#TODO translate #}
        <div class="row">
            <div class="col-md-12">
                {{ form_label(form.civility) }}<br/>
                {{ form_widget(form.civility) }}
            </div>

            <div class="col-md-6">
                {{ form_label(form.last_name) }}<br/>
                {{ form_widget(form.last_name) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.email) }}<br/>
                {{ form_widget(form.email) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.first_name) }}<br/>
                {{ form_widget(form.first_name) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.mobile_phone) }}<br/>
                {{ form_widget(form.mobile_phone) }}
            </div>
            <div class="col-md-12">
                {{ form_label(form.birth_date) }}<br/>
                {{ form_widget(form.birth_date) }}
            </div>
            <div class="col-md-12">
                {{ form_label(form.address) }}<br/>
                {{ form_widget(form.address) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.zip_code) }}<br/>
                {{ form_widget(form.zip_code) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.city) }}<br/>
                {{ form_widget(form.city) }}
            </div>

            <div id="changePassword" class="col-md-6">
                {{ form_widget(form.plainPassword) }}
            </div>

            <div id="submitButton" class="col-md-6">
                {{ form_widget(form) }}
            </div>
            {{ form_end(form) }}

        </div>
    </section>
{% endblock %}