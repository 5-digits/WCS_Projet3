{% extends 'user/layout.html.twig' %}
{% trans_default_domain 'my-orders' %}
{% block content %}

    {{ 'my_baptisms.title' |trans }}
    {{ 'my_next_baptisms.subtitle' |trans }}

    {% for order in ordersBaptised %}
        {% if order.baptismHasUser.baptism.status != 'done' %}
            {{ 'date.title' |trans }} : {{ order.baptismHasUser.baptism.date |date }}
            {{ 'restaurant.title' |trans }} : {{ order.baptismHasUser.baptism.restaurant.name }}
            <a href="{{ path('restaurant', {'slug': order.baptismHasUser.baptism.restaurant.slug}) }}">{{ 'my_next_baptism.see_link' |trans }}</a>
            {{ 'guestNumber.title' |transchoice(order.guestNumber,{'guestNumber': order.guestNumber}) }}
        {% endif %}
    {% endfor %}

    <table>
        <thead>
            <tr>
                <th>{{ 'restaurant.title' |trans }}</th>
                <th>{{ 'date.title' |trans }}</th>
                <th>{{ 'guestNumber.title' |trans }}</th>
                <th>{{ 'bill.title' |trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for order in ordersBaptised %}
                {% if order.baptismHasUser.baptism.status == 'done' %}
                    <tr>
                        <td>{{ order.baptismHasUser.baptism.restaurant.name }}</td>
                        <td>{{ order.baptismHasUser.baptism.date |date }}</td>
                        <td>{{ order.guestNumber }}</td>
                        <td>link</td>
                    </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>

{% endblock %}