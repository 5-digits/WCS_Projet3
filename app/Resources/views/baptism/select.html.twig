{% extends 'base.html.twig' %}

{% block body %}
    <h1>Baptisms list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Date</th>
                <th>Places</th>
                <th>Restaurant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for baptism in baptisms %}
            <tr>
                <td>{{ baptism.id }}</td>
                <td>{% if baptism.status %}Yes{% else %}No{% endif %}</td>
                <td>{% if baptism.date %}{{ baptism.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ baptism.places }}</td>
                <td>{# if baptism.restaurant.name %}{{ baptism.restaurant.name }}{%  endif #}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('baptism_purchase', { 'id': baptism.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td>Nouveau</td>
            <td>Yes</td>
            <td>2017-02-02</td>
            <td>3</td>
            <td>wild restaurant</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('baptism_purchase', { 'id': 0 }) }}">show</a>
                    </li>

                </ul>
            </td>
        </tr>
        </tbody>
    </table>
    {{ form_start(edit_form,{'action': path('baptism_purchase')}) }}
    {{ form_widget(edit_form) }}
    <button></button>
    {{ form_end(edit_form) }}

{% endblock %}
