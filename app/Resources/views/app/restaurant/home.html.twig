{% extends 'app/layout.html.twig' %}

{% trans_default_domain "restaurant" %}

{% block content %}
    <!-- header section -->
    <section class="container-fluid" id="ourRestaurants">
            <h1>
                {{ 'restaurant_mainTitle' |trans |upper }}
            </h1>
    </section>

    <!-- first mozaic section including search bar and map -->
    <section class="container-fluid" id="restaurantSearch">
        <div class="row">

            <div class="col-md-6 restaurantSearch-block">
                <h1>{{ 'restaurant_searchBar' |trans |upper }}</h1>
                <!-- search bar goes here -->
            </div>
            <div class="col-md-6 restaurantSearch-block">
                <iframe class="restaurantSearch-block--map"
                        src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d22270.76906344167!2d4.8386187000000005!3d45.754230549999996!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sfr!2sfr!4v1485357546231"
                        width="600"
                        height="450"
                        frameborder="0"
                        style="border:0"
                        allowfullscreen>
                </iframe>
            </div>

            {% for i in 0..5 %}
                <div class="col-md-4 restaurantSearch-mozaic">
                    <a href="#">
                        <div class="restaurantSearch-mozaic--inside">
                            <h2>{{ 'restaurant_name' |trans |upper }}</h2>
                                <p>{{ 'restaurant_address' |trans |upper }}</p>
                            <button>
                                {{ 'restaurant_restaurantButton' |trans |upper }}
                            </button>
                        </div>
                    </a>
                </div>
            {% endfor %}



        </div>
    </section>

    <section class="container-fluid" id="paginator">
        <div class="row">
            <nav class="navigation">
                <ul class="pagination pagination-lg">
                    <li>
                        <a href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li>
                        <a href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </section>

{% endblock %}