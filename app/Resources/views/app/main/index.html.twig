{% extends 'app/layout.html.twig' %}

{# translation default file for this view#}
{% trans_default_domain 'homepage' %}

{% block content %}
    <div class="wrapper">
       <div class="container homeHeader">
              <div class="row">
                  <div class="col-md-12">
                      <div class="col-xs-offset-1 col-xs-10 col-md-offset-2 col-md-8 homeHeader-text">
                          <h1 class="homeHeader-title">{{ 'home_mainTitle' |trans |upper }}</h1>
                          <p class="homeHeader-p">{{ 'home_intro' |trans |upper }}</p>
                      </div>
                      <div class="col-md-offset-3 col-md-6 homeHeader-buttonInfo">
                          <button class="homeHeader-buttonInfo--size">
                              {{ 'home_buttonInfo' |trans }}
                          </button>
                      </div>
                  </div>
              </div>
       </div>
       <div class="container brandPresentation">
           <div class="row">
               <div class="col-md-offset-1 col-md-10 brandPresentation-firstBlock">
                   <h1 class="brandPresentation-title">{{ 'home_secondTitle' |trans |upper }}</h1>
               </div>
               <div class="col-xs-12 col-md-3 brandPresentation-1" >
                   <img class="brandPresentation-1" src="{{ asset('img/home_icone1.png') }}"/>
                   <p>{{ 'home_presentation_p1' |trans }}</p>
               </div>
               <div class="col-xs-12 col-md-3">
                   <img src="{{ asset('img/home_icone2.png') }}"/>
                   <p>{{ 'home_presentation_p2' |trans }}</p>
               </div>
               <div class="col-xs-12 col-md-3">
                   <img src="{{ asset('img/home_icone3.png') }}"/>
                   <p>{{ 'home_presentation_p3' |trans }}</p>
               </div>
           </div>
       </div>
    </div>
{% endblock %}
